@model IEnumerable<DataLayer.PageComment>

<!-- #region Comment -->
@foreach (var item in Model)
{
    <li>
        <img src="~/Content/img/Avatar.png">
        <div>
            <span> @item.Name </span>
            <span> @item.CreateDate.ToShamsi() </span>
        </div>
        <p>
            @item.Comment
        </p>
    </li>
}
<!-- #endregion -->